<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Designs">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:text="-:| DESIGNS |:-"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <View
            android:layout_width="900dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="1dp"
            android:text="SELECTS THE DESIGNS FROM TEMPLATES BELOW "
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="900dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/holo_orange_dark"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="336dp"
            android:layout_height="354dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/design1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="336dp"
            android:layout_height="354dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/design2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="336dp"
            android:layout_height="354dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/design3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="336dp"
            android:layout_height="354dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/design4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="336dp"
            android:layout_height="354dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/design5" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="336dp"
            android:layout_height="354dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/design6" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation"
            app:itemBackground="@color/black"
            android:layout_marginTop="20dp"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            app:menu="@menu/menu_navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignParentBottom="true"
            />


    </LinearLayout>
</ScrollView>